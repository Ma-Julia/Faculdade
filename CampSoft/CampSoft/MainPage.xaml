<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampSoft.MainPage"  
            BarBackgroundColor="#CFBCA8">
    <ContentPage
        IconImageSource="inicio">
        <ScrollView>
            <VerticalStackLayout BackgroundColor="#CFBCA8"
            Padding="40,40"
            Spacing="25">
                <Image
                Source="logocampsoft.png"
                HeightRequest="185"/>

                <Button 
                x:Name="BTNSorteioSimples"
                Text="SORTEIO DE TIME SIMPLES"
                TextColor="#27341E"
                FontSize="16"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                Clicked="BTNSorteioSimples_Clicked"/>


            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage
        IconImageSource="conquistas">
        <ScrollView>
            <VerticalStackLayout BackgroundColor="#CFBCA8"
            Padding="40,40"
            Spacing="25">
                <Image
                Source="logocampsoft.png"
                HeightRequest="185"/>

                <Label Text="SUAS CONQUISTAS"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Padding="10"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage
        IconImageSource="perfil">
        <ScrollView>
            <VerticalStackLayout  BackgroundColor="#CFBCA8"
            Padding="40,40"
            Spacing="25">
                <Image
                Source="logocampsoft.png"
                HeightRequest="185"/>
                
                <Label Text="SEU PERFIL"
           FontSize="Header"
           HorizontalOptions="Center"
           Padding="10"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
</TabbedPage>
